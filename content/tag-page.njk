---
pagination:
    data: collections.tagPages
    size: 1
    alias: tagPage
permalink: /tags/{{ tagPage.tagName | slugify }}/{% if tagPage.pageNumber > 0 %}{{ tagPage.pageNumber + 1 }}/{% endif %}
eleventyComputed:
    title: Tagged "{{ tagPage.tagName }}"
---
{% if tagDescriptions[tagPage.tagName | slugify] %}
  <p class="tag-description">{{ tagDescriptions[tagPage.tagName | slugify] }}</p>
{% endif %}

{% set postList = tagPage.posts %}
{% set pagination = tagPage.pagination %}
{% include "post-list.njk" %}
