{
	"css.validate": true,
	"[markdown]": {
		"editor.fontSize": 16,
		"editor.lineHeight": 24,
		"editor.lineNumbers": "off",
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		},
		"editor.minimap.enabled": false,

	},
	"markdownlint.config": {
		"MD041": false,
	},
	"cSpell.words": [
		"colours",
		"favourite",
		"phpunit",
		"fediverse",
		"eleventy"
	],
	"cSpell.dictionaries": [
		"en-gb",
  	"php",
  	"css",
		"html",
		"js"
	]
}
